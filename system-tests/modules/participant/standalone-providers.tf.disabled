# Standalone Provider Configuration
# This file enables running terraform directly in the participant module folder
# For module usage (from system-tests/main.tf), keep this file with the '.disabled' suffix; to enable standalone usage, rename it to 'standalone-providers.tf'.

variable "kube_context" {
  description = "Kubernetes context to use"
  type        = string
  default     = "kind-dse-cluster"
}

variable "kube_config_path" {
  description = "Path to kubeconfig file"
  type        = string
  default     = "~/.kube/config"
}

provider "kubernetes" {
  config_path    = var.kube_config_path
  config_context = var.kube_context
}

provider "helm" {
  kubernetes = {
    config_path    = var.kube_config_path
    config_context = var.kube_context
  }
}
